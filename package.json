{
  "name": "inventory-nexus",
  "version": "1.0.0",
  "author": "Ruheni Alex",
  "description": "Baraka Roses Inventory management - GraphQL API using Nexus, Prisma and Postgresql",
  "license": "ISC",
  "main": "index.js",
  "keywords": [
    "Nexus",
    "GraphQL",
    "TypeScript",
    "Prisma",
    "Postgresql"
  ],
  "scripts": {
    "dev": "nexus dev",
    "build": "nexus build --deployment heroku",
    "start": "node .nexus/build",
    "format": "npx prettier --write './**/*.{ts,md}'",
    "test": "jest"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^8.5.1",
    "nexus": "^0.25.0",
    "nexus-plugin-jwt-auth": "^1.2.0",
    "nexus-plugin-prisma": "^0.16.1",
    "nexus-plugin-shield": "^0.2.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^26.0.4",
    "@types/jsonwebtoken": "^8.5.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "useTabs": true,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
